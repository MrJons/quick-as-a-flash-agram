
<div class="col-xs-4"></div>

<div class='form-horizontal col-xs-4'>
<%= form_for @photo, html: {multipart: true} do |f| %>
  <h3 class='form-group'>Add a photo here!</h3>

  <div class='form-group'>
  <%= f.label :image, class: 'form-control-file hidden' %>
  <%= f.file_field :image, class: 'form-control-file' %>
  </div>

  <div class='form-group'>
  <%= f.label :description, class: 'form-control hidden' %>
  <%= f.text_area :description, class: 'form-control', placeholder: 'Description...' %>
  </div>

  <%= f.submit "Save changes", class: 'btn btn-primary form-group' %>
<% end %>
</div>

<div class="col-xs-4"></div>
